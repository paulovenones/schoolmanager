{% extends "layout.njk"%}

{% block content %}


  <div class="card">
    <section class="image" style="background: url({{ student.avatar_url }}) no-repeat  center center / cover"></section>

    <section class="details">
      <form action="/students?_method=PUT" method="post">

        <h3>Editar Aluno</h3>

        {% include "students/fields.njk" %}
        
        <input type="hidden" name="id" value={{ student.id }}>

      </form>

      <form id="form-delete" action="/students?_method=DELETE" method="post">
        <input type="hidden" name="id" value={{ student.id }}>

        <button type="submit">Delete</button>
      </form>
    </section>

  </div>

  {% include "confirm.njk" %}

{% endblock %}