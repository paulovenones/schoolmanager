{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="image" style="background: url({{ teacher.avatar_url }}) no-repeat  center center / cover"></section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Nome Completo</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.age }}</div>
            </div>

            <div class="item">
                 <div>Grau de Escolaridade</div>
                 <div>{{teacher.education_level}}</div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                {% if  teacher.class_type == "presencial" %}
                  <div>Presencial</div>
                {% endif %}
                {% if teacher.class_type == "distancia" %}
                  <div>À Distância</div>
                {% endif %}
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                  {% for subject in teacher.subjects_taught %}
                    <span>{{ subject }}</span>
                  {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>

            <a class="button" href="/teachers/{{ teacher.id }}/edit">Editar</a>

        </section>
    </div>
{% endblock content %}